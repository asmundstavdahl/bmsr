{% extends 'base.html.twig' %}

{% block body %}
    <h1>Oversikt over typer ting</h1>
    <table>
        <tr>
            <th>#</th>
            <th>Navn</th>
            <th>Antall</th>
        </tr>
        {% for type in types %}
        <tr data-quick-select="{{ type.id }}">
            <td>{{ type.id }}</td>
            <td>
                <a href="{{ path("type_show", {"id": type.id}) }}">
                    {{ type.name }}
                </a>
            </td>
            <td>{{ type.count }}</td>
        </tr>
        {% endfor %}
    </table>

    {% include 'quick-select.html.twig' %}
{% endblock %}

{% block hotkeys %}
n new
{% endblock %}
