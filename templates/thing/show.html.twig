{% extends 'base.html.twig' %}

{% block body %}
	<h1>
		{{ thing.title }}
	</h1>
	<h2>
		<a href="{{ path("type_show", { "type_id": type.id}) }}">{{ type.name }}</a>#{{ thing.id }}
	</h2>
	<p>
		Navn: {{ type.name }}
	</p>
	<p>
		{#Antall: {{ type.count }}#}
	</p>
	<table>
	{% for property in properties %}
		<tr>
			<th>{{ property.name }}</th>
			<td>
			{% if attribute(thing, property.name) is defined %}
				{{ attribute(thing, property.name) }}
			{% else %}
				<i>-</i>
			{% endif %}
			</td>
		</tr>
	{% endfor %}
	</table>
{% endblock %}
